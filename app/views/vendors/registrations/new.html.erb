<div class="py-4">
  <h2 class="text-3xl font-semibold text-center text-[#2e2e2e] mb-8">Sign up</h2>
  
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "max-w-lg mx-auto p-8 bg-white rounded-lg shadow-md space-y-6" }) do |f| %>
  
    <%= f.error_notification %>
  
    <div class="space-y-4">
      <%= f.input :vendor_image,
                  label_html: { class: "block text-base font-medium text-[#2e2e2e] mb-1" },
                  input_html: { class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-[#f25c54]", accept: "image/*" } %>
  
      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  label_html: { class: "block text-base font-medium text-[#2e2e2e] mb-1" },
                  input_html: { autocomplete: "email", class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-[#f25c54]" } %>
  
      <%= f.input :password,
                  required: true,
                  hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                  label_html: { class: "block text-base font-medium text-[#2e2e2e] mb-1" },
                  input_html: { autocomplete: "new-password", class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-[#f25c54]" } %>
  
      <%= f.input :password_confirmation,
                  required: true,
                  label_html: { class: "block text-base font-medium text-[#2e2e2e] mb-1" },
                  input_html: { autocomplete: "new-password", class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-[#f25c54]" } %>
  
      <%= f.input :owner_name, required: true,
                  label_html: { class: "block text-base font-medium text-[#2e2e2e] mb-1" },
                  input_html: { class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-[#f25c54]" } %>
  
      <%= f.input :shop_name, required: true,
                  label_html: { class: "block text-base font-medium text-[#2e2e2e] mb-1" },
                  input_html: { class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-[#f25c54]" } %>
  
      <%= f.input :address, required: true,
                  label_html: { class: "block text-base font-medium text-[#2e2e2e] mb-1" },
                  input_html: { class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-[#f25c54]" } %>
  
      <%= f.input :contact_number, required: true,
                  label_html: { class: "block text-base font-medium text-[#2e2e2e] mb-1" },
                  input_html: { class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-[#f25c54]" } %>
    </div>
  
    <div class="form-actions mt-6">
      <%= f.button :submit, "Sign up", class: "w-full px-4 py-2 bg-[#f25c54] hover:bg-[#d94b43] text-white rounded-md text-lg font-medium" %>
    </div>
  
  <% end %>
  
  <div class="mt-4 text-center text-sm text-[#2e2e2e]">
    <%= render "devise/shared/links" %>
  </div>
</div>
