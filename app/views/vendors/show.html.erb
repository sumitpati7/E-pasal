<div class="max-w-4xl mx-auto p-8 bg-white rounded-lg shadow-md space-y-8 my-10">
  <!-- Header Section -->
  <div class="flex items-center justify-between border-b pb-4 mb-6">
    <h1 class="text-3xl font-semibold text-[#2e2e2e]">Vendor Profile</h1>
   <%= link_to "Edit Profile", edit_vendor_registration_path, 
                    class: "bg-[#f25c54] hover:bg-[#d94b43] text-white px-4 py-2 rounded-md text-sm font-medium" %>
  </div>

    <div class="flex justify-center">
        <% if current_vendor.vendor_image.attached? %>
            <%=image_tag current_vendor.vendor_image, class: "h-[300px] w-[300px] rounded-full"%>
        <%else%>
            <div class="rounded-full h-[300px] w-[300px] bg-blue-200 capitalize text-[200px] flex justify-center items-center font-bold"><%=current_vendor.shop_name[0]%></div>
        <% end %>
    </div>

  <!-- Vendor Information Section -->
  <div class="space-y-6">
    <div>
      <h2 class="text-xl font-semibold text-[#2e2e2e]">Personal Information</h2>
      <div class="mt-4 space-y-3">
        <div class="flex justify-between items-center">
          <span class="text-sm text-gray-600">Owner Name:</span>
          <span class="text-base font-medium text-[#2e2e2e]"><%= current_vendor.owner_name %></span>
        </div>
        <div class="flex justify-between items-center">
          <span class="text-sm text-gray-600">Email:</span>
          <span class="text-base font-medium text-[#2e2e2e]"><%= current_vendor.email %></span>
        </div>
        <div class="flex justify-between items-center">
          <span class="text-sm text-gray-600">Contact Number:</span>
          <span class="text-base font-medium text-[#2e2e2e]"><%= current_vendor.contact_number %></span>
        </div>
      </div>
    </div>

    <div>
      <h2 class="text-xl font-semibold text-[#2e2e2e]">Shop Details</h2>
      <div class="mt-4 space-y-3">
        <div class="flex justify-between items-center">
          <span class="text-sm text-gray-600">Shop Name:</span>
          <span class="text-base font-medium text-[#2e2e2e]"><%= current_vendor.shop_name %></span>
        </div>
        <div class="flex justify-between items-center">
          <span class="text-sm text-gray-600">Address:</span>
          <span class="text-base font-medium text-[#2e2e2e]"><%= current_vendor.address %></span>
        </div>
      </div>
    </div>

    <div>
      <h2 class="text-xl font-semibold text-[#2e2e2e]">Account Information</h2>
      <div class="mt-4 space-y-3">
        <div class="flex justify-between items-center">
          <span class="text-sm text-gray-600">Vendor ID:</span>
          <span class="text-base font-medium text-[#2e2e2e]"><%= current_vendor.id %></span>
        </div>
        <div class="flex justify-between items-center">
          <span class="text-sm text-gray-600">Created At:</span>
          <span class="text-base font-medium text-[#2e2e2e]"><%= current_vendor.created_at.strftime("%B %d, %Y") %></span>
        </div>
        <div class="flex justify-between items-center">
          <span class="text-sm text-gray-600">Last Updated:</span>
          <span class="text-base font-medium text-[#2e2e2e]"><%= current_vendor.updated_at.strftime("%B %d, %Y") %></span>
        </div>
      </div>
    </div>
  </div>
</div>
