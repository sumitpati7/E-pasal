<nav class="bg-white shadow-md sticky top-0 z-10 ">
    <div class="container mx-auto px-4 py-4 flex items-center justify-between">
        <!-- Logo/Store Name -->
        <a href="/" class="text-2xl font-bold text-[#2e2e2e]">E-pasal</a>

        <div class="flex items-center gap-4">
            <% if vendor_signed_in? %>
                    <%= link_to vendor_path(current_vendor.id), class: "flex gap-4 items-center" do %>
                        <div class="flex justify-center">
                            <%= vendor_profile_image_or_user_name(current_vendor, "h-[30px] w-[30px]") %>
                        </div>
                        <span class="text-[#2e2e2e] font-medium"><%=current_vendor.shop_name%></span>
                    <% end %>
                <%= button_to "Sign Out", destroy_vendor_session_path, method: :delete, 
                    class: "bg-[#f25c54] hover:bg-[#d94b43] text-white px-4 py-2 rounded-md text-sm font-medium" %>
                <%= link_to orders_path do %>
            <div class="flex justify-center items-center text-xl text-white hover:text-opacity-80 relative px-2">
              <div id="order_count" class="absolute top-[-10px] right-[-6px] h-[24px] text-[12px] w-[24px] flex justify-center items-center bg-blue-500 font-semibold text-red-600 bg-opacity-60 rounded-full"><%= current_vendor.order_products.count %></div>
                    <i class="fa-solid fa-cart-shopping text-black" title="Orders"></i>
            </div>
                <%end%>
            <% else %>
                <%= link_to "Sign In", new_vendor_session_path, 
                    class: "bg-gray-100 hover:bg-[#f7f7f7] text-[#2e2e2e] px-4 py-2 rounded-md text-sm font-medium" %>
                
                <%= link_to "Sign Up", new_vendor_registration_path, 
                    class: "bg-[#f25c54] hover:bg-[#d94b43] text-white px-4 py-2 rounded-md text-sm font-medium" %>
            <% end %>
        </div>
        
    </div>
</nav>