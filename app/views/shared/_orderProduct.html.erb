<%= turbo_frame_tag orderProduct do %>
    <tr class="<%= index.even? ? 'bg-white' : 'bg-gray-200' %> hover:bg-gray-400">
        <td class="px-4 py-3"> <%= index+1 %> </td>
        <td class="px-4 py-3 flex justify-center"> 
            <% if orderProduct.product.product_image.attached? %>
                <%= image_tag url_for(orderProduct.product.product_image[0]), class: "w-10 h-10 rounded mr-4" %>
            <% else %>
                <img src="" alt="" class="w-10 h-10 rounded mr-4">
            <% end %>
        </td>
        <td class="px-4 py-3 text-center"> <%= orderProduct.product.name %> </td>
        <td class="text-center px-4 py-3"> <%= orderProduct.quantity %> </td>
        <td class="px-4 py-3 text-center"> <%= orderProduct.created_at.to_formatted_s(:long) %> </td>
    </tr>
<% end %>