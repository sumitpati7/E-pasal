<tr class="border-b w-full hover:bg-gray-200">
    <td class="px-4 py-3 flex items-center">
        <%= image_tag url_for(product.product_image[0]), class: "w-10 h-10 rounded mr-4" %>
        <span class="text-[#2e2e2e] font-medium min-w-[350px]"> <%= product.name %> </span>
    </td>
    <td class="px-4 py-3 text-[#2e2e2e] text-center"> Rs. <%= product.price %> </td>
    <td class="px-4 py-3 text-[#2e2e2e]"> <%= product.created_at.to_formatted_s(:long) %> </td>
    <td class="px-4 py-3">
        <%=button_to "Edit",edit_product_path(product.id),method: :get,class:"w-full px-0 py-1 text-white bg-[#f25c54] rounded-md hover:bg-[#d94b43] focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-[#f25c54]"%>
    </td>
    <td class="px-4 py-3">
        <button class="flex items-center px-3 py-1 text-[#2e2e2e] bg-gray-100 hover:bg-gray-200 rounded">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
        Delete
        </button>
    </td>
</tr>