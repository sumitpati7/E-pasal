<tr class="border-b w-full hover:bg-gray-200" id="product_<%= product.id %>">
    <td class="flex items-center justify-center">
        <% if product.product_image.attached? %>
            <%= image_tag url_for(product.product_image), class: "w-10 h-10 rounded mr-4" %>
        <% else %>
            <img src="<%= product.image_url %>" alt="" class="w-10 h-10 rounded mr-4">
        <% end %>
    </td>
    <td>
        <a href="/products/<%= product.id %>"><%= product.title %></a>
    </td>
    <td>
        <%= product.price %>
    </td>
    <td> <%= product.stock %> </td>
    <td> <%= time_ago_in_words(product.created_at) %> </td>
    <td> <%= button_to "Edit", edit_product_path(product.id), data:{ turbo_frame: product }, method: :get, class:"w-full px-4 py-1 text-white bg-[#f25c54] rounded-md hover:bg-[#d94b43] focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-[#f25c54]"%></td>
    <td><%= button_to "Delete", product_path(product.id), data:{ turbo_frame: product }, method: :delete, class:"w-full px-4 py-1 text-white bg-[#f25c54] rounded-md hover:bg-[#d94b43] focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-[#f25c54]"%></td>
</tr>