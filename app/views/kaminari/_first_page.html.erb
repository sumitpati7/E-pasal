<%# Link to the "First" page
  - available local variables
    url:           url to the first page
    current_page:  a page object for the currently displayed page
    total_pages:   total number of pages
    per_page:      number of items to fetch per page
    remote:        data-remote
-%>
<span class="first">
  <%= link_to_unless current_page.first?, t('views.pagination.first').html_safe, url, remote: remote, class: "bg-[#f25c54] hover:bg-[#d94b43] text-white py-2 px-4 border border-gray-400 rounded shadow h-[48px]" %>
</span>
