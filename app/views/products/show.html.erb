<div class="lg:flex mx-auto w-[90%]  mt-4 lg:gap-6  ">
  <!-- Image Section -->
  <div class="mx-auto lg:w-[50%] lg:h-[50vh] lg:overflow-hidden">
    <%=ProductImage(@product, "w-full rounded mt-3 h-full hover:scale-105")%>
  </div>

    <!-- Details Section -->
    <div class="flex items-center shadow-md border rounded w-[50%]">
    <div class="w-full  p-4 lg:p-6">
        <div class="text-[#c96262] text-4xl font-bold mb-4 text-justify"><%= @product.title %></div>
        <div class="text-gray-600 text-lg lg:text-xl ml-2 mb-2">Brand: <%= @product.brand %></div>
        <div class="text-red-600 text-lg mb-2">
            <span class="line-through">Rs. <%= @product.price %></span>
            <span class="ml-2 font-bold"><%= @product.discount_percentage %>% Off</span>
        </div>
        <div class="text-green-500  text-xl font-bold mb-4">
            Rs. <%= calc_discounted_amount(@product.price, @product.discount_percentage) %>
        </div>
        <div class="text-blue-900 font-bold text-lg">Stock: <%= @product.stock %></div>
    </div>
    </div>
</div>